<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="nba.schema.hibernate.Team" table="team">
        <id name="team_id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="city"/>
        <property name="state"/>
        <property name="short_name"/>
    </class>
</hibernate-mapping>